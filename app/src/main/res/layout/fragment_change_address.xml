<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/zeepy_gray_3300">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearlayout_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_speech_bubble"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="20dp"
            app:layout_constraintVertical_bias="0.093"
            app:layout_constraintHorizontal_bias="0.044"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.597">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_address_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_round_bold"
                android:textColor="@color/zeepy_black_3b"
                android:textSize="12sp"
                android:visibility="gone"
                android:layout_marginBottom="14dp"
                app:layout_constraintBottom_toTopOf="@+id/textview_change_address"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="이촌동 2가" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_address_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_round_bold"
                android:textColor="@color/zeepy_black_3b"
                android:textSize="12sp"
                android:visibility="gone"
                android:layout_marginBottom="14dp"
                app:layout_constraintBottom_toTopOf="@+id/textview_change_address"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textview_address_first"
                tools:text="이촌동 2가" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_change_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_round_extrabold"
                android:textColor="@color/zeepy_green_33"
                android:textSize="12sp"
                android:text="주소 변경하기"
                android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textview_address_second" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
