<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".lookaround.LookAroundFragment">

        <com.example.zeepyforandroid.customview.ZeepyToolbar
            android:id="@+id/map_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/map_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingVertical="8dp">

            <Spinner
                android:id="@+id/spinner_lessor_personality"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_round_bold"
                android:background="@drawable/box_spinner_white"
                android:text="전체"
                android:textSize="12sp"
                android:spinnerMode="dropdown"
                style="@style/SpinnerColor"
                android:gravity="center_vertical"
                app:layout_constraintWidth_percent="0.12"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="16dp"/>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintStart_toEndOf="@id/spinner_lessor_personality"
                app:layout_constraintTop_toTopOf="spinner_lessor_personality"
                app:layout_constraintBottom_toBottomOf="spinner_lessor_personality"
                android:layout_marginStart="4dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cb_standard_order"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="기본순"
                        android:textAlignment="center"
                        android:fontFamily="@font/nanum_square_round_bold"
                        android:textColor="@color/zeepy_black_3b"
                        android:textSize="12sp"
                        android:button="@null"
                        android:background="@drawable/selector_grayf4_blue59_16dp" />

                    <CheckBox
                        android:id="@+id/cb_good_sound_insulation"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        android:text="방음 굿"
                        android:textAlignment="center"
                        android:fontFamily="@font/nanum_square_round_bold"
                        android:textColor="@color/zeepy_black_3b"
                        android:textSize="12sp"
                        android:button="@null"
                        android:background="@drawable/selector_grayf4_blue59_16dp" />

                    <CheckBox
                        android:id="@+id/cb_good_pest"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        android:text="해충 제로"
                        android:textAlignment="center"
                        android:fontFamily="@font/nanum_square_round_bold"
                        android:textColor="@color/zeepy_black_3b"
                        android:textSize="12sp"
                        android:button="@null"
                        android:background="@drawable/selector_grayf4_blue59_16dp" />

                    <CheckBox
                        android:id="@+id/cb_good_sunlight"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        android:text="채광 좋은"
                        android:textAlignment="center"
                        android:fontFamily="@font/nanum_square_round_bold"
                        android:textColor="@color/zeepy_black_3b"
                        android:textSize="12sp"
                        android:button="@null"
                        android:background="@drawable/selector_grayf4_blue59_16dp" />

                    <CheckBox
                        android:id="@+id/cb_good_water_pressure"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        android:text="수압 완벽"
                        android:textAlignment="center"
                        android:fontFamily="@font/nanum_square_round_bold"
                        android:textColor="@color/zeepy_black_3b"
                        android:textSize="12sp"
                        android:button="@null"
                        android:background="@drawable/selector_grayf4_blue59_16dp" />

                </androidx.appcompat.widget.LinearLayoutCompat>


            </HorizontalScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_review_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_menu"
            android:layout_marginTop="24dp"
            tools:listitem="@layout/item_result_house"
            tools:itemCount="3"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>