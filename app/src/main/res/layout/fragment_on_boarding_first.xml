<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTransparent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_ment1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_first_ment1"
            android:textColor="#666666"
            android:layout_marginStart="24dp"
            app:layout_constraintVertical_bias="0.1225"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/nanum_square_round_extrabold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_ment2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_round_extrabold"
            android:textSize="28dp"
            android:lineSpacingExtra="10dp"
            android:text="@string/onboarding_first_ment"
            android:layout_marginTop="26dp"
            android:textColor="@color/zeepy_black_3b"
            app:layout_constraintTop_toBottomOf="@id/textview_ment1"
            app:layout_constraintStart_toStartOf="@id/textview_ment1"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageview_onboarding_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/group_950"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_ment2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
