<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".onboarding.OnBoardingThirdFragment">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_ment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_round_extrabold"
            android:textSize="28dp"
            android:layout_marginStart="24dp"
            android:lineSpacingExtra="10dp"
            android:textColor="@color/zeepy_black_3b"
            android:text="@string/onboarding_third_ment"
            app:layout_constraintVertical_bias="0.176"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageview_character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/character_img_1_x"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_ment"
            app:layout_constraintVertical_bias="0.17" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_finish_onboarding"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/box_blue5f_8dp"
            android:fontFamily="@font/nanum_square_round_extrabold"
            android:text="@string/finish_onboarding_text"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:icon="@drawable/arrow_back"
            app:iconGravity="textEnd"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:0.195"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageview_character" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
