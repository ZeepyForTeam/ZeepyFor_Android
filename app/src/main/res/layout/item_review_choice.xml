<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="data"
            type="com.example.zeepyforandroid.review.data.dto.ReviewChoiceModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:zeepy="http://schemas.android.com/apk/res/com.example.zeepyforandroid">
        <TextView
            android:id="@+id/tv_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{data.item}"
            android:textSize="12sp"
            android:textColor="@color/zeepy_black_3b"
            android:fontFamily="@font/nanum_square_round_regular"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="항목"/>

            <RadioGroup
                android:id="@+id/group_choice"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:0.146"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_item"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <com.example.zeepyforandroid.customview.ZeepyRadioButton
                android:id="@+id/btn_like"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="좋아요"
                android:layout_marginEnd="8dp"
                android:layout_height="match_parent"
                zeepy:button_type="2" />

            <com.example.zeepyforandroid.customview.ZeepyRadioButton
                android:id="@+id/btn_soso"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="적당해요"
                android:layout_marginEnd="8dp"
                android:layout_height="match_parent"
                zeepy:button_type="3" />

            <com.example.zeepyforandroid.customview.ZeepyRadioButton
                android:id="@+id/btn_dislike"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="별로예요"
                android:layout_height="match_parent"
                zeepy:button_type="4" />

            </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
