<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:zeepy="http://schemas.android.com/apk/res/com.example.zeepyforandroid"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".conditionsearch.ConditionSearchFragment">

        <com.example.zeepyforandroid.customview.ZeepyToolbar
            android:id="@+id/condition_search_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/condition_search_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_building_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_round_extrabold"
                    android:text="건물 유형"
                    android:textColor="@color/zeepy_black_3b"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"/>

                <RadioGroup
                    android:id="@+id/buildingtype_group"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_building_type">

                    <com.example.zeepyforandroid.customview.ZeepyRadioButton
                        android:id="@+id/radiobtn_option_oneroom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        zeepy:button_type="6"
                        android:checked="true"/>

                    <com.example.zeepyforandroid.customview.ZeepyRadioButton
                        android:id="@+id/radiobtn_option_tworoom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        zeepy:button_type="7" />

                    <com.example.zeepyforandroid.customview.ZeepyRadioButton
                        android:id="@+id/radiobtn_option_officetel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        zeepy:button_type="9" />

                </RadioGroup>

                <RadioGroup
                    android:id="@+id/paytype_group"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/buildingtype_group"
                    android:layout_marginTop="30dp">

                    <com.example.zeepyforandroid.customview.ZeepyRadioButton
                        android:id="@+id/radiobtn_option_walsae"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        zeepy:button_type="6"
                        android:checked="true"/>

                    <com.example.zeepyforandroid.customview.ZeepyRadioButton
                        android:id="@+id/radiobtn_option_jeonsae"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        zeepy:button_type="7" />

                    <com.example.zeepyforandroid.customview.ZeepyRadioButton
                        android:id="@+id/radiobtn_option_maemae"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        zeepy:button_type="8" />

                </RadioGroup>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>






</layout>