<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/zeepy_gray_9a</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="personality_checked">
        <item name="fontFamily">@font/nanum_square_round_extrabold</item>
        <item name="background">@drawable/box_lessor_personality_checked</item>
    </style>

    <style name="personality_unchecked">
        <item name="fontFamily">@font/nanum_square_round_regular</item>
        <item name="background">@drawable/box_lessor_personality_unchecked</item>
    </style>
    
    <style name="SpinnerColor" parent="Widget.AppCompat.Spinner">
        <item name="colorControlNormal">@color/zeepy_blue_5f</item>
    </style>

    <style name="AppTheme.Widget.Design.TextInputLayout" parent="@style/Widget.Design.TextInputLayout">
        <item name="android:theme">@style/AppTheme.TextInputEditText</item>
        <item name="errorTextAppearance">@style/AppTheme.TextAppearance.Design.Error</item>
        <item name="hintTextAppearance">@style/AppTheme.TextAppearance.Design.Hint</item>
        <item name="android:background">@drawable/box_spinner_white</item>
    </style>

    <style name="AppTheme.TextInputEditText">
        <item name="editTextStyle">@style/AppTheme.Widget.MaterialComponents.TextInputEditText</item>
    </style>

    <style name="AppTheme.Widget.MaterialComponents.TextInputEditText" parent="@style/Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:textColor">@color/zeepy_black_3b</item>
        <item name="fontFamily">@font/nanum_square_round_bold</item>
        <item name="android:drawablePadding">7dp</item>
    </style>

    <style name="AppTheme.TextAppearance.Design.Error" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textColor">#FF0</item>
    </style>

    <style name="AppTheme.TextAppearance.Design.Hint" parent="@style/TextAppearance.Design.Hint">
        <item name="android:textColor">#0FF</item>
    </style>

    <style name="BottomSheetDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@style/Animation.MaterialComponents.BottomSheetDialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="tab_text" parent="Widget.Design.TabLayout">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/nanum_square_round_extrabold</item>
    </style>
    
    <style name="circleShapeImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundedImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>

    <style name="SwitchButtonStyle" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/selector_custom_switch</item>
        <item name="trackTint">@color/selector_custom_switch</item>
        <item name="android:paddingHorizontal">2.7dp</item>
        <item name="android:paddingVertical">9.3dp</item>
    </style>

    <style name="BottomSheet" parent = "@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/box_bottomsheet</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog"/>

    <style name="ZeepyProgressBar" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/zeepy_blue_5f</item>
    </style>

</resources>