<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/zeepy_gray_9a</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="personality_checked">
        <item name="fontFamily">@font/nanum_square_round_extrabold</item>
        <item name="background">@drawable/box_lessor_personality_checked</item>
    </style>

    <style name="personality_unchecked">
        <item name="fontFamily">@font/nanum_square_round_regular</item>
        <item name="background">@drawable/box_lessor_personality_unchecked</item>
    </style>
    
    <style name="SpinnerColor" parent="Widget.AppCompat.Spinner">
        <item name="colorControlNormal">@color/zeepy_blue_5f</item>
    </style>

    <style name="tab_text" parent="Widget.Design.TabLayout">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/nanum_square_round_extrabold</item>
    </style>
    
    <style name="circleShapeImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="SwitchButtonStyle">
        <item name="background">@color/zeepy_yellow_ef</item>
        <item name="android:paddingHorizontal">2.7dp</item>
        <item name="android:paddingVertical">9.3dp</item>
    </style>

</resources>